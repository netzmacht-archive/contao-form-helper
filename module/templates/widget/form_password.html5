<?php

$helper   = \Netzmacht\FormHelper\Helper::getInstance();
$elements = $helper->generate($this);

if($elements) {
	/** @var \Netzmacht\FormHelper\Component\Container $container */
	list($label, $container, $errors) = $elements;

	$repeat = $container->removeChild('repeat');
	$repeatLabel = $container->removeChild('repeatLabel');

	$layout = $helper->getLayout($this);
	include $layout;

	$label = $repeatLabel;
	$container->setElement($repeat);
	$errors = '';

	include $layout;
}